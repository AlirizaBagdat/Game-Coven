<div class="container mt-5">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h3 class="card-title">Add your review for {{name}}</h3>

            <form class="review" id="review">
                <div class="form-group d-flex align-items-center">
                    <label for="review-description">Description:</label>
                    <textarea id="review-description" name="review-description" class="form-control w-75" rows="12"></textarea>
                </div>

                <div class="form-group">
                    <label for="score">Your score of this game:</label>
                    <select class="form-control w-20" id="score" name="score">
                    </select>
                </div>

                <button type="submit" id="add-review-btn" class="btn btn-primary">Submit Review</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/review.js"></script>
